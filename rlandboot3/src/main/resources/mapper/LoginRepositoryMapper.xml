<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="kr.co.rland.web.repository.LoginRepository"> 
	
	<select id="findByIdPwd" resultType="UserInfo">
		select *
		from rlanddb.member
		where
		username like #{id}
		and pwd like #{pwd};
	</select>
  
  </mapper>