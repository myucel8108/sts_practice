<?xml version="1.0" encoding="UTF-8"?>
<!-- 이거 MenuRepository의 Getter를 쓰는거임 (무조건 Getter있어야함) -->
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.rland.web.repository.RcmdMenuRepository">

	<resultMap id="menuViewResultMap" type="RcmdMenuView" >
	  <result property="menuId" column="menu_id" />
	</resultMap>
	
   <select id="findViewAllByMenuId" resultMap="menuViewResultMap">
      select * from rcmd_menu_view 
      where menu_id= #{menuId}
   </select>
	<insert id="insert" parameterType="RcmdMenu">
		insert into rcmd_menu(menu_id , id)
		values(#{menuId}, #{id})
	</insert>

	<delete id="delete">
		delete from rcmd_menu where id=${id} AND menu_id = #{menuId}
	</delete>
	
</mapper>

